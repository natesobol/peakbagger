<script>
  // ----------------------------------------------------------------------------------
  // JavaScript enhancements for dynamic year, height syncing, and sparkle animation.
  // ----------------------------------------------------------------------------------

  // 1. Set year in footer using America/New_York timezone.
  (function(){
    try{
      // Use Intl.DateTimeFormat to get year in user‚Äôs timezone (America/New_York)
      const now = new Date();
      const formatter = new Intl.DateTimeFormat('en-US', {
        timeZone: 'America/New_York',
        year: 'numeric'
      });
      const year = formatter.format(now);
      const yrEl = document.getElementById('yr');
      if(yrEl) {
        yrEl.textContent = year;
      }
    }catch(e){
      // Fallback: use UTC year if Intl.DateTimeFormat is unavailable
      var fallbackYear = new Date().getUTCFullYear();
      var yrElFallback = document.getElementById('yr');
      if(yrElFallback){
        yrElFallback.textContent = fallbackYear;
      }
    }
  })();

  // 2. Automatically post page height to parent (for embedding contexts).
  function postHeight(){
    try{
      // Get full document height (account for margin collapse)
      const h = document.documentElement.scrollHeight;
      parent.postMessage({ type:'nh48-links-height', height:h }, '*');
    }catch(e){
      // ignore cross-origin issues
    }
  }
  // Initial height post on load
  postHeight();
  // Repost when content finishes loading
  window.addEventListener('load', postHeight);
  // Repost on resize (debounced)
  window.addEventListener('resize', ()=>{
    clearTimeout(window.__rh);
    window.__rh = setTimeout(postHeight, 120);
  });

  // 3. Sparkle animation inside profile circle (subtle, optional).
  (function(){
    const canvas = document.getElementById('sparkle');
    if(!canvas) return;
    // Ensure CanvasRenderingContext2D exists
    const ctx = canvas.getContext && canvas.getContext('2d');
    if(!ctx) return;

    // Device pixel ratio capped at 2 for performance
    const DPR = Math.min(2, window.devicePixelRatio || 1);

    // Resize canvas to match element size (scaled for DPR)
    function size(){
      const rect = canvas.getBoundingClientRect();
      canvas.width  = Math.floor(rect.width  * DPR);
      canvas.height = Math.floor(rect.height * DPR);
    }
    size();
    window.addEventListener('resize', size);

    // Particle configuration
    const N = 14;    // Number of particles
    const P = [];    // Particle array

    // Initialize particles with random positions, radii, opacity, and velocity
    function init(){
      P.length = 0;
      for(let i=0; i<N; i++){
        P.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          r: (0.5 + Math.random() * 1.0) * DPR,
          a: 0.06 + Math.random() * 0.10,
          vx: (Math.random() - 0.5) * 0.10 * DPR,
          vy: (Math.random() - 0.5) * 0.10 * DPR
        });
      }
    }
    init();

    // Draw and update each frame
    function tick(){
      // Clear previous frame
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      // Update & draw particles
      for(const p of P){
        p.x += p.vx;
        p.y += p.vy;
        // Bounce off edges
        if(p.x < 0 || p.x > canvas.width)  p.vx *= -1;
        if(p.y < 0 || p.y > canvas.height) p.vy *= -1;
        // Draw particle as small circle with subtle opacity
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255,255,255,${p.a})`;
        ctx.fill();
      }
      // Schedule next frame
      requestAnimationFrame(tick);
    }
    tick();
  })();
</script>
